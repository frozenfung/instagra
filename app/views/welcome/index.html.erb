<% if current_user %>
  Hi, <%= current_user.name %>
  <%= link_to "登出", auth_signout_path, :method => :delete %></a>
    <%= form_for Photo.new, :url => photos_path(@photo), :html => { :multipart => true } do |form| %>
      <%= form.label :title, 'Title' %>
      <%= form.text_field :title%>
      <%= form.file_field :img %>
      <%= form.submit 'Upload'%>
    <% end %>
    <%= link_to 'My Photos', photos_path %>
<% else %>
  <%= link_to "Facebook 登入", "/auth/facebook" %></a>
<% end %>



<table>
  <% @photos.each do |p| %>
    <tr>
      <td><%= image_tag p.img.url(:medium) %></td>
    </tr>
    <tr>
      <td><%= p.title %></td>
    </tr>
  <% end %>
</table>